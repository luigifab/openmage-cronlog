<config>
	<modules>
		<Luigifab_Cronlog>
			<version>4.5.0</version>
		</Luigifab_Cronlog>
	</modules>
	<global>
		<blocks>
			<cronlog>
				<class>Luigifab_Cronlog_Block</class>
			</cronlog>
		</blocks>
		<helpers>
			<cronlog>
				<class>Luigifab_Cronlog_Helper</class>
			</cronlog>
		</helpers>
		<models>
			<cronlog>
				<class>Luigifab_Cronlog_Model</class>
			</cronlog>
			<cron>
				<rewrite>
					<observer>Luigifab_Cronlog_Model_Rewrite_Observer</observer>
					<schedule>Luigifab_Cronlog_Model_Rewrite_Schedule</schedule>
				</rewrite>
			</cron>
		</models>
		<template>
			<email>
				<cronlog_email_template translate="label">
					<label>Cron jobs report</label>
					<file>cronlog_report.html</file>
					<type>html</type>
				</cronlog_email_template>
			</email>
		</template>
	</global>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<Luigifab_Cronlog before="Mage_Adminhtml">Luigifab_Cronlog</Luigifab_Cronlog>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<adminhtml>
		<events>
			<admin_system_config_changed_section_cronlog>
				<observers>
					<cronlog>
						<class>cronlog/observer</class>
						<method>updateConfig</method>
					</cronlog>
				</observers>
			</admin_system_config_changed_section_cronlog>
		</events>
		<layout>
			<updates>
				<cronlog>
					<file>luigifab/cronlog.xml</file>
				</cronlog>
			</updates>
		</layout>
		<translate>
			<modules>
				<Luigifab_Cronlog>
					<files>
						<default>Luigifab_Cronlog.csv</default>
					</files>
				</Luigifab_Cronlog>
			</modules>
		</translate>
	</adminhtml>
	<crontab>
		<jobs>
			<cronlog_send_report>
				<run>
					<model>cronlog/observer::sendEmailReport</model>
				</run>
			</cronlog_send_report>
		</jobs>
	</crontab>
	<default>
		<cronlog>
			<email>
				<enabled>0</enabled>
				<recipient_email>hello@example.org</recipient_email>
				<sender_email_identity>general</sender_email_identity>
			</email>
		</cronlog>
	</default>
</config>